}

.main, aside > div > div {
  width: calc(100vw - 4rem)
}

aside {
  color: #fff;
  position: fixed;
  z-index: 5;
  width: calc(100vw - 4rem);
  transition: clip-path 0.5s;
  clip-path: content-box circle(20px at calc(100% - 2rem) calc(3rem));
}

aside > div {
  width: 100vw;
  height: 100vh;
  background: linear-gradient(45deg, #30f0e0, #8840bb, #ee13a0, #f2ba10);
