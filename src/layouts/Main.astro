---
import { Markdown } from 'astro/components';
import BaseHead from '../components/BaseHead.astro';
import Navigation from '../components/Navigation.astro';

const {title, description, publishDate, author, heroImage, permalink} = Astro.props;
---
<html lang="en">
  <head>
    <BaseHead title={title} description={description} permalink={`${Astro.site.origin}${permalink}`} />
  </head>

  <body>
    <Navigation />
    <div class="mt-48 max-w-6xl mx-auto px-20">
      <slot />
    </div>
  </body>
</html>

