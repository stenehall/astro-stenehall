---
import { Markdown } from 'astro/components';
import BaseHead from '../components/BaseHead.astro';
import Navigation from '../components/Navigation.astro';

const {title, description, publishDate, author, heroImage, permalink} = Astro.props;
---
<html lang="en">
  <head>
    <BaseHead title={title} description={description} permalink={`${Astro.site.origin}${permalink}`} />
  </head>

  <body>
    <Navigation />
    <div class="h-screen flex flex-col justify-center content-center">
      <h1 class="self-center">{title}</h1>
      <ul class="self-center mt-10 prose">
        <slot></slot>
      </ul>
    </div>
  </body>
</html>

